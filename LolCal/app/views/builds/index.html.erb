<% if user_signed_in? %>
  <%#= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete } %>

  <h1 style="color: #C89B3C;
      font-family: Beaufort;
      font-weight: bold;
      font-size: 48px;
      text-decoration: underline;
      margin-bottom: 20px">League of Legends Calculator</h1>

  <h2 style="font-weight: bold;
    text-decoration: underline;
    margin-bottom: 20px;
    color: #F0E6D2">Builds</h2>

  <ul>
    <% @builds.each do |build| %>
      <li style="margin-bottom: 20px;">
        <%= link_to build.name, build_path(build), style:'color: #FFFFFF;
          font-family: Beaufort;
          font-weight: bold;
          font-size: 22px;' %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'New build', articles_path, data: { turbo: false }, style: "width: fit-content; padding: 10px; background-color: #C89B3C; color: white; border: none; cursor: pointer;
      border-radius: 5px; text-align: center; white-space: nowrap; text-decoration: none;" %>
<% else %>
  <h1 style="color: #C89B3C;
    font-family: Beaufort;
    font-weight: bold;
    font-size: 48px;
    text-decoration: underline;
    margin-bottom: 20px;">League of Legends Calculator</h1>
  <%= link_to 'Sign in', new_user_session_path, style: "width: fit-content; padding: 10px; background-color: #C89B3C; color: white; border: none; cursor: pointer;
      border-radius: 5px; text-align: center; white-space: nowrap; text-decoration: none;"  %>
<% end %>
