<%= form_with(model: @enrolled_course, local: true) do |form| %>

  <div>
    <%= form.label :course_schedules_id, 'Course Schedule' %>
    <%= form.collection_select :course_schedules_id, @course_schedules, :id, :display_name %>

  </div>

  <div>
    <%= form.label :course_name %><br>
    <%= form.text_field :course_name %><br>
  </div>

  <div>
    <%= form.label :course_day_of_week %><br>
    <%= form.select :course_day_of_week, options_for_select(['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday']) %>
  </div>

  <div>
    <%= form.label :course_meeting_start %><br>
    <%= form.time_select :course_meeting_start, {}, {} %>
  </div>

  <div>
    <%= form.label :course_meeting_end %><br>
    <%= form.time_select :course_meeting_end, {}, {} %>
  </div>

  <%= form.submit %>

<% end %>

<%= link_to 'Back to enrolled courses', enrolled_courses_path %>
